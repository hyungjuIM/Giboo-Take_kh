<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="alarm-mapper">

	<!-- 알람 리스트 resultMap -->
	<resultMap type="alarm" id="alarm_rm">
		<id property="alarmNo" column="ALARM_NO" />
		<result property="alarmContent" column="ALARM_CONTENT" />
		<result property="alarmDate" column="ALARM_DATE" />
		<result property="readStatus" column="READ_STATUS" />
		<result property="memberNo" column="MEMBER_NO" />
		<result property="volunteerNo" column="VOLUNTEER_NO" />
		<result property="donationNo" column="DONATION_NO" />
		<result property="reviewNo" column="REVIEW_NO" />
		<result property="eventNo" column="EVENT_NO" />
		<result property="noticeNo" column="NOTICE_NO" />
		<result property="askNo" column="ASK_NO" />
		<result property="agencyName" column="AGENCY_NAME" />
	</resultMap>
	
<!-- 알람 목록 조회  -->
<select id="selectAll" resultMap="alarm_rm">

  SELECT ALARM_CONTENT, TO_CHAR(ALARM_DATE, 'YY.MM.DD') AS ALARM_DATE
FROM ALARM 
WHERE MEMBER_NO = '7'



    </select>
    
    
    <!-- SELECT READ_STATUS,ALARM_NO , ALARM_CONTENT, TO_CHAR(ALARM_DATE, 'YY.MM.DD') AS ALARM_DATE,
		EVENT_NO, DONATION_NO, VOLUNTEER_NO, NOTICE_NO, REVIEW_NO
		FROM ALARM
		WHERE MEMBER_NO = '7'
		ORDER BY ALARM_NO DES C,  READ_STATUS  DESC -->
    
    <update id="updateAlarmStatus" >
		UPDATE ALARM SET READ_STATUS = 'Y' WHERE ALARM_NO = #{alarmNo}
	</update>


</mapper>
